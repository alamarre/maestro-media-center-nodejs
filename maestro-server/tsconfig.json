{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "out",
    "rootDir": "src",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "ES2019"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules/**",
    "typings"
  ]
}
