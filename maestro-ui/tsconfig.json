{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "out",
    "moduleResolution": "node",
    "rootDir": "src",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6",
      "DOM"
    ],
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings"
  ]
}
